<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane minHeight="400.0" minWidth="300.0" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rickshaw.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS"
                    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="45.0" 
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer" fillWidth="true" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="40.0"
                   AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="80.0" />
        <Button fx:id="sendButton" onAction="#handleUserInput" prefHeight="40.0" prefWidth="75.0" text="Send"
                AnchorPane.bottomAnchor="2.0" AnchorPane.rightAnchor="2.0" />
    </children>
</AnchorPane>
